package github.madeoliveira.controlefinanceiro.api.resource;

import org.junit.Test;
import org.junit.runner.RunWith;
import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.boot.test.autoconfigure.web.servlet.AutoConfigureMockMvc;
import org.springframework.boot.test.autoconfigure.web.servlet.WebMvcTest;
import org.springframework.test.context.ActiveProfiles;
import org.springframework.test.context.junit4.SpringRunner;
import org.springframework.test.web.servlet.MockMvc;

import github.madeoliveira.controlefinanceiro.api.dto.UsuarioDTO;

@RunWith(SpringRunner.class)
@ActiveProfiles("test")
@WebMvcTest(controllers = UsuarioResource.class)
@AutoConfigureMockMvc
public class UsuarioResourceTest {

	static final String API = "/api/usuario";
	@Autowired
	MockMvc mvc;
	
	@Test
	public void deveAutenticarUsuario() {
		UsuarioDTO dto = UsuarioDTO.builder().email("usuario@gmail.com").senha("123").build();
	}
}
